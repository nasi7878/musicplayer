<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/songView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/songIv"
        android:layout_width="@dimen/margin64"
        android:layout_height="@dimen/margin64"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingTop="2dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_tab" />

    <TextView
        android:id="@+id/songTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/songIv"
        android:layout_toRightOf="@+id/songIv"
        android:maxLines="1"
        android:layout_marginTop="@dimen/margin10"
        android:fontFamily="@font/helvetica"
        android:layout_marginStart="@dimen/margin10"
        android:text="@string/app_name"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/margin10" />

    <TextView
        android:id="@+id/songArtistTv"
        android:layout_width="wrap_content"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/songTitleTv"
        android:layout_alignStart="@+id/songTitleTv"
        android:layout_below="@+id/songTitleTv"
        android:paddingTop="@dimen/margin6"
        android:fontFamily="@font/helvetica"
        android:text="@string/app_name"
        android:textColor="@color/colorAccent" />

    <View
        android:id="@+id/verticalDividerp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/songIv"
        android:layout_toRightOf="@id/songIv"
        android:background="@color/colorAccent" />



</RelativeLayout>

